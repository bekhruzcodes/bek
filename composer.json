{
    "name": "bekhruz/bek",
    "description": "A simple version control system",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "authors": [
        {
            "name": "bekhruzcodes",
            "email": "bekhruzbekmirzaliev744@gmail.com"
        }
    ],
    
    "require": {
        "php": "^7.4 || ^8.0",
        "composer-plugin-api": "^2.0"
    },
    
    "require-dev": {
        "composer/composer": "^2.0"
    },
    
    "autoload": {
        "psr-4": {
            "Bekhruz\\Bek\\": "src/",
            "Bekhruz\\Bek\\Composer\\": "src/Composer/"
        }
    },
    
    "bin": ["bin/bek", "bin/bek.php"],
    
    "extra": {
        "class": "Bekhruz\\Bek\\Composer\\BekInstaller"
    },
    
    "scripts": {
        "post-install-cmd": [
            "chmod +x bin/bek",
            "php install.php",
            "php vendor/bekhruz/bek/install.php"
        ],
        "post-update-cmd": [
            "chmod +x bin/bek"
        ]
    },
    
    "config": {
        "allow-plugins": true
    }
}